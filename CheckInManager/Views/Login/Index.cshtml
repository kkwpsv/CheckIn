@{
    ViewData["Title"] = "登录";
}
@model LoginModel




<form method="post" asp-controller="Login" asp-action="Index" style="max-width:300px;padding:15px;margin:0 auto; text-align:center">
    <h2 style="text-align:left">登录</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" name="EmployeeID" placeholder="工号" asp-for="EmployeeID" />
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" name="Password" placeholder="密码" asp-for="Password" />
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">登录</button>


</form>







