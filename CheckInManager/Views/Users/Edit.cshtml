@{
    ViewData["Title"] = "用户修改";

}

@model UserModel

<div>
    <h1 class="page-header">用户修改</h1>
    <form asp-controller="Users" asp-action="Edit" method="Post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="UserID" />
        <div class="form-group">
            <label for="name">姓名</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="name">密码</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="如不修改请留空">
        </div>
        <div class="form-group">
            <label for="name">工号</label>
            <input type="text" class="form-control" asp-for="EmployeeID">
        </div>
        <div class="form-group">
            <label for="name">手机号</label>
            <input type="text" class="form-control" asp-for="MobilephoneNumber">
        </div>
        <div class="form-group">
            <label for="name">邮箱</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="name">部门</label>
            <select asp-for="DepartmentID" asp-items="ViewBag.Selectlist" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="name">用户类型</label>
            <select asp-for="Right" asp-items="ViewBag.Selectlist2" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-primary">修改</button>
        <button type="reset" class="btn btn-primary">清空</button>
    </form>

</div>